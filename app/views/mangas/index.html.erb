<h1>Mangas</h1>

<table class="table table-hover">

<thead>
	<tr>
		<td>Series Name:</td>
		<% if admin_signed_in? %>
		<td>Admin:</td>
		<% end %>
	</tr>
</thead>

<% @mangas.each do |manga| %> 

	<tr>
		<td><%= link_to manga.name, manga_path(manga) %></td>
		<% if admin_signed_in? %>
		<td><%= link_to "Manage", edit_manga_path(manga.slug) %></td>
		<% end %>
	</tr>

<% end %>

</table>

<a href="/mangas/new">New Manga</a>
